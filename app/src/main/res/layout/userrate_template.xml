<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/searchView_bgclr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="vertical"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RatingBar
                    android:layout_marginStart="5dp"
                    android:transformPivotX="0dp"
                    android:transformPivotY="40dp"
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:saveEnabled="true"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/tv_commnets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.75"
                    android:maxLines="5"
                    android:text="fghdjgvdjkfgjhgvjhgvjhgfvjhddfvhdfkvjhdfkhdkfvdkjfdjkfvkdjfvkdfjvjhdfvhjdgfvhdfdfvhdfjgdjfgvjdgvjgvhjgv" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>