<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">



        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:layout_marginStart="@dimen/text_16"
            android:layout_marginTop="@dimen/text_16"
            android:layout_marginEnd="@dimen/text_16"
            android:orientation="vertical">

          <!--  <WebView
                android:id="@+id/webview"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />-->


            <VideoView
                android:id="@+id/videovw"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>



            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">




                    <ImageView
                        android:src="@drawable/sharesavebanner"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"/>

                    <TextView
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/page_text_1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"/>








            </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="@dimen/text_16"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="210dp">



                <ImageView
                    android:src="@drawable/sharebanner"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"/>

                <TextView
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/text_16"
                    android:gravity="center"
                    android:text="@string/page_text_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="@dimen/text_16"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">



                <ImageView
                    android:src="@drawable/formagroup"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"/>

                <TextView
                    android:textSize="@dimen/text_16"
                    android:gravity="center"
                    android:text="@string/page_text_3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>


            </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_cuisinesCategorie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>